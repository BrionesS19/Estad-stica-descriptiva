#| include: false
#| label: setup
library(ggplot2)
library(dplyr)
library(knitr)
library(kableExtra)
library(plotly)
#| include: FALSE
#| label: ejercicio_carga
# Parámetros del problema
tiempo_1 <- 2
tiempo_2 <- 8
n_cargas <- 1000
# Simular tiempos de carga
tiempo_carga <- runif(n_cargas, min = tiempo_1, max = tiempo_2)
# Histograma con densidad teórica
ggplot(data.frame(tiempo = tiempo_carga), aes(x = tiempo)) +
geom_histogram(aes(y = after_stat(density)), bins = 30,
fill = "#458B74", color = "black", alpha = 0.7) +
geom_hline(yintercept = 1/(tiempo_2 - tiempo_1),
color = "#8B7D6B", size = 1, linetype = "dashed") +
labs(title = "Histograma de Tiempos de Cargaa",
x = "Tiempo de carga (segundos)",
y = "Densidad",
caption = "Línea roja: Densidad teórica = 1/6") +
theme_minimal() +
theme(plot.title = element_text(hjust = 0.5))
# Percentil 75
percentil_75 <- qunif(0.75, min = tiempo_1,
max = tiempo_2)
cat("Percentil 75 de los tiempos de carga:", round(percentil_75,
2), "segundos\n")
# Probabilidad de cargar en menos de 4 segundos
prob_menos_4 <- punif(4, min = tiempo_1,
max = tiempo_2)
cat("Probabilidad de que una página cargue en menos de 4 segundos:",
round(prob_menos_4, 3), "\n")
